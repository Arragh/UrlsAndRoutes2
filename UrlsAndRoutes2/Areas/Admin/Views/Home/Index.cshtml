@model Person[]

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Areas</title>
    <link rel="stylesheet" href="~/dist/bootstrap/css/bootstrap.css" />
</head>
<body class="m-1 p-1">
    <table class="table table-bordered table-striped table-sm">
        <tr>
            <th>Name</th>
            <th>City</th>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.City</td>
            </tr>
        }
    </table>
    <a asp-action="Index" asp-controller="Home" asp-area="">Link</a>
</body>
</html>